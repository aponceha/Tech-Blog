<div class="posts">
  {{#each posts}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2 class="text">
        <a href="/post/{{id}}">{{title}}</a>
      </h2 class="text">
      <div class="text">
        Posted by {{User.username}} on {{format_date createdAt}}
      </div class="text">
    </div>
    <div class="card-body">
      {{body}}
    </div>
  </article>
  {{/each}}
</div>